{
  "expo": {
    "name": "Soffitta",
    "slug": "soffitta-nowasteland",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "soffitta",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.nowasteland.soffitta",
      "infoPlist": {
        "NSCameraUsageDescription": "Per fotografare gli oggetti del tuo inventario",
        "NSPhotoLibraryUsageDescription": "Per selezionare foto degli oggetti",
        "NSLocationWhenInUseUsageDescription": "Per trovare oggetti nelle vicinanze",
        "NSMicrophoneUsageDescription": "Per l'assistente vocale durante il riordino",
        "NSSpeechRecognitionUsageDescription": "Per riconoscere i comandi vocali"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "app.nowasteland.soffitta",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permetti a Soffitta di usare la tua posizione per trovare oggetti vicini."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permetti a Soffitta di usare la fotocamera per fotografare gli oggetti."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#e94560"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
